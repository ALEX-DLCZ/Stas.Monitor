                                        <TreeViewItem Header="Child2"/>
                                        <TreeViewItem Header="Child3"/>
                                </TreeViewItem>
                        </TreeView>
                        
                </StackPanel>
                
                <StackPanel  Grid.Column="1"
                             Background="White">
                        
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" 
