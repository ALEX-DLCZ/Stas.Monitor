        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Stas.Monitor.Views.MainWindow"
        Title="Stas.Monitor.Views">
        <Grid RowDefinitions="*, 48" ColumnDefinitions="128,*">
                <StackPanel
                        Background="Orange">
                        <ListBox Name="Choices"/>
