<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="450"
        x:Class="Stas.Monitor.Views.MainWindow"
        Width="350" Height="450"
        Title="Stas.Monitor.Views">

    <Grid ColumnDefinitions="*" RowDefinitions="Auto,*" Margin="5">
        <StackPanel Grid.Column="0" Grid.Row="0">
            <ComboBox Background="Orange" SelectedIndex="0" Name="ComboBoxThermometers"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Background="Aqua">
            <!-- ajouter la vue de InfoView -->
            <ContentControl Name="InfoViewContent"/>
        </StackPanel>
    </Grid>


</Window>