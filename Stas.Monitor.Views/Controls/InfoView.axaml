<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             x:Class="Stas.Monitor.Views.Controls.InfoView"
             Width="350">

    <Grid Name="InfoGrid" ColumnDefinitions="*,*" RowDefinitions="*,*" Margin="5" Background="Black">
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="Measurement" FontWeight="Bold" Text="??,??" FontSize="50" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Name="Date" Text="dd/MM/YYYY HH:MM:SS" Margin="5" HorizontalAlignment="Right" />
            <TextBlock Name="MeasurementExpected" Margin="5" Background="Black" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>


</UserControl>