<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Stas.Monitor.Views.InfoView"
             Width="350" >

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Margin="5" Background="Black">
        <StackPanel Orientation="Horizontal" >
            <TextBlock Name="Temperature" FontWeight="Bold" Text="??,??" FontSize="50" />
            <TextBlock Text="°" FontSize="50" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical"  VerticalAlignment="Center" >
            <TextBlock Name="Date" Text="dd/MM/YYYY HH:MM:SS" Margin="5" HorizontalAlignment="Right" />
            <TextBlock Name="TemperatureExpected" Margin="5" Background="Red"  HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>


</UserControl>