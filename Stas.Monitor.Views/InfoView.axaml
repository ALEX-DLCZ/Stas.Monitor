<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Stas.Monitor.Views"
             x:Class="Stas.Monitor.Views.InfoView"
             x:DataType="views:InfoView"
             Width="350" >

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Margin="5" Background="Black">
        <StackPanel Orientation="Horizontal" >
            <TextBlock Name="Temperature" FontWeight="Bold" Text="??,??" FontSize="50" />
            <TextBlock Text="°" FontSize="50" />
        </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical"  VerticalAlignment="Center" >
                <TextBlock Name="Date" Text="dd/MM/YYYY HH:MM:SS"  HorizontalAlignment="Right" />
                <TextBlock Name="TemperatureExpected" Text="Attendu : 20,50" Background="Red"  HorizontalAlignment="Right" />
            </StackPanel>
    </Grid>


</UserControl>